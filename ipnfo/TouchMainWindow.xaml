                </Canvas>
                
            </Button>
        </mm:WindowCommands>
    </mm:MetroWindow.LeftWindowCommands>
    <mm:MetroWindow.RightWindowCommands>
        <mm:WindowCommands>
            <ComboBox Visibility="Collapsed" IsEnabled="{Binding IsAnalyzing, Converter={StaticResource ib}}" SelectedIndex="0" ItemsSource="{Binding NICs}" Width="150" SelectedItem="{Binding CurrentNIC, Mode=OneWayToSource}"  />
            <TextBlock Text="Von " VerticalAlignment="Center" Margin="3,0,3,0" />

            <TextBox Background="Transparent" FontWeight="Bold" Foreground="White"  HorizontalContentAlignment="Center" BorderThickness="0" IsEnabled="{Binding IsAnalyzing, Converter={StaticResource ib}}" Text="{Binding Config.IPRangeStart, Converter={StaticResource l2ip}}" Width="110" VerticalAlignment="Center" />
            <TextBlock Text="bis" VerticalAlignment="Center" Margin="3,0,3,0"/>
            <TextBox Background="Transparent" FontWeight="Bold" Foreground="White"  HorizontalContentAlignment="Center" BorderThickness="0" IsEnabled="{Binding IsAnalyzing, Converter={StaticResource ib}}" Text="{Binding Config.IPRangeEnd, Converter={StaticResource l2ip}}" Width="110" VerticalAlignment="Center"  />
            <Button Margin="3,0,5,0" MinWidth="28" Command="{Binding StartStopCommand}"  >
                <Canvas  Width="20" Height="20" >
                    <Path Width="20" Height="20"  Stretch="Fill" Fill="Red" Data="F1 M 42.5,22C 49.4036,22 55,27.5964 55,34.5C 55,41.4036 49.4036,47 42.5,47C 40.1356,47 37.9245,46.3435 36,45.2426L 26.9749,54.2678C 25.8033,55.4393 23.9038,55.4393 22.7322,54.2678C 21.5607,53.0962 21.5607,51.1967 22.7322,50.0251L 31.7971,40.961C 30.6565,39.0755 30,36.8644 30,34.5C 30,27.5964 35.5964,22 42.5,22 Z M 42.5,26C 37.8056,26 34,29.8056 34,34.5C 34,39.1944 37.8056,43 42.5,43C 47.1944,43 51,39.1944 51,34.5C 51,29.8056 47.1944,26 42.5,26 Z "/>
                </Canvas>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MetroWindowButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAnalyzing}" Value="true">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                        <Rectangle Fill="LimeGreen" />
                                        <Canvas  Width="20" Height="20" >
                                            <Path Width="20" Height="20"  Stretch="Fill" Fill="Black" Data="F1 M 32,0 256,224 224,256 0,32   Z "/>
                                            <Path Width="20" Height="20"  Stretch="Fill" Fill="Black" Data="F1 M 224,0 256,32 32,256 0,224   Z "/>
                                        </Canvas>
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </mm:WindowCommands>
            
    </mm:MetroWindow.RightWindowCommands>
    <Grid>
        <ContentControl Content="{Binding}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}" Name="content" />
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding View}" Value="{x:Static local:TouchView.Grid}">
                            <Setter Property="ContentTemplate" TargetName="content">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            
                                            
                                           
                                            
                                            <ItemsControl ItemsSource="{Binding ClassCDummies}" Grid.Row="1">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="16" Rows="16" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border SnapsToDevicePixels="True" Background="{Binding Host.VisibleStatus, Converter={StaticResource s2b}, Mode=OneWay, FallbackValue=LightGray}" Margin="1" MouseDown="Border_MouseDown">
                                                            <Grid>
                                                                <TextBlock FontSize="10" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding Converter="{StaticResource p2t}">
                                                                            <Binding Path="Host.Ping" />
                                                                            <Binding Path="Host.Status" />
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock FontSize="20" Text="{Binding LastOctett}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                <TextBlock FontSize="10" Text="{Binding Host.Hostname}" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                                                            </Grid>
                                                        </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                            <StackPanel Orientation="Horizontal" Margin="5,5,5,2" HorizontalAlignment="Center" Grid.Row="0" Height="32">
                                                <Button Width="32" Command="{Binding PreviousClassCNetworkCommand}" Style="{StaticResource MetroFlatButton}">
                                                    <Canvas Width="20" Height="20">
                                                        <Path Width="10" Height="20"  Stretch="Fill" Fill="Black" Data="F1 M 256,0 L0,128 L256,256 L256,224 L64,128 L256,32  Z "/>
                                                    </Canvas>

                                                </Button>
                                                <TextBlock HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"  FontWeight="Bold" Margin="5,0,5,0" Text="{Binding CurrentClassCNetwork, Mode=OneWay}" ></TextBlock>
                                                <Button Width="32" Command="{Binding NextClassCNetworkCommand}" Style="{StaticResource MetroFlatButton}">
                                                    <Canvas Width="20" Height="20">
                                                        <Path Width="10" Height="20"  Stretch="Fill" Fill="Black" Data="F1 M 0,0 L0,0 L256,128 L0,256 L0,224 L192,128 L0,32  Z "/>
                                                    </Canvas>
                                                </Button>
                                            </StackPanel>

                                            <Border Visibility="{Binding CurrentSelected, Converter={StaticResource o2v}}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" />
                                                </Border.Effect>
                                                <Grid Background="White" Grid.RowSpan="2" DataContext="{Binding CurrentSelected}" >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="30" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid Grid.RowSpan="5" Grid.Column="2">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="30" />
                                                                <RowDefinition Height="5" />
                                                                <RowDefinition Height="30" />
                                                                <RowDefinition Height="30" />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock FontSize="16" Margin="5,0,0,0" Grid.Row="1">
                                                                <TextBlock.Text>
                                                                    <MultiBinding Converter="{StaticResource p2t}" ConverterParameter="unit">
                                                                        <Binding Path="Ping" />
                                                                        <Binding Path="Status" />
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <Button Grid.Row="2" Command="{Binding WakeOnLanCommand}" Visibility="{Binding CanWOL, Converter={StaticResource b2v}}" Style="{StaticResource MetroFlatButton}" >
                                                                <Button.Content>
                                                                    <Image Source="Icons/box.png" ToolTip="Sende Wake-on-LAN (WOL) Paket" />
                                                                </Button.Content>
                                                            </Button>
                                                            <Button Content="Port-Scan"  Grid.Row="3" Style="{StaticResource MetroFlatButton}" Visibility="Collapsed" />
                                                            <Button Grid.Row="0" Click="Button_Click_3" Style="{StaticResource MetroFlatButton}" >
                                                                <Button.Content>
                                                                    <Path Data="M0,0 L8,8 M0,8 L8,0" Stretch="Uniform" StrokeThickness="2" Stroke="Black"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>
                                                        
                                                       
                                                        <Image />
                                                        <TextBlock  FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Margin="0,0,5,0">
                                                            <Hyperlink Command="{Binding SMBCommand}">
                                                                <TextBlock Text="{Binding IP, Converter={StaticResource l2ip},ConverterParameter=LAN}" />
                                                            </Hyperlink>
                                                        </TextBlock>                                                       
                                                        
                                                        <Image Grid.Row="2" Margin="5,0,0,0"  />
                                                        <TextBlock Text="{Binding Hostname}"  local:TextBlockHelper.CopyOnClick="true" Grid.Row="2" FontSize="24" FontWeight="Bold"  Grid.Column="1" />

                                                        <Image Grid.Row="3" Margin="5,0,0,0"  />
                                                        <TextBlock Text="{Binding MAC, Converter={StaticResource m2s}}" FontSize="24" local:TextBlockHelper.CopyOnClick="true" FontWeight="Bold" Grid.Row="3" Grid.Column="1" Margin="0,0,5,0" />
                                                       
                                                        <ListView Grid.Row="4" MinHeight="0" Grid.ColumnSpan="3" MaxHeight="300" ItemsSource="{Binding OpenPorts}" Visibility="Collapsed">
                                                            <ListView.View>
                                                                <GridView ColumnHeaderContainerStyle="{StaticResource portheader}" >
                                                                    <GridViewColumn DisplayMemberBinding="{Binding Name}" />
                                                                    <GridViewColumn DisplayMemberBinding="{Binding Description}" />
                                                                </GridView>
                                                            </ListView.View>
                                                        </ListView>

                                                    </Grid>
                                                    
                                            </Grid>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>                                   
                                </Setter.Value>
                            </Setter>                            
                        </DataTrigger>
                        <DataTrigger Binding="{Binding View}" Value="{x:Static local:TouchView.List}">
                            <Setter Property="ContentTemplate" TargetName="content">
                                <Setter.Value>
                                    <DataTemplate>
                                        <ListView ItemsSource="{Binding HostsOnline}">
                                            <ListView.Resources>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </Style>                                                
                                            </ListView.Resources>
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn>
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Source="{Binding VisibleStatus,Converter={StaticResource hs2i}}" Width="32" Height="32" />
                                                                    <Button Visibility="{Binding CanWOL,Converter={StaticResource b2v}}" Command="{Binding WakeOnLanCommand}">
                                                                        <Button.Template>
                                                                            <ControlTemplate>
                                                                                <Image Source="Icons/box.png" Width="16" Height="16" ToolTip="Sende Wake-on-LAN (WOL) Paket" />
                                                                            </ControlTemplate>
                                                                        </Button.Template>
                                                                    </Button>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                    <GridViewColumn Header="IP" Width="150">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" FontSize="16" FontWeight="Normal" local:TextBlockHelper.CopyOnClick="true" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                    <GridViewColumn Header="Name" Width="280">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Hostname}" FontSize="16" FontWeight="Bold" local:TextBlockHelper.CopyOnClick="true" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                    <GridViewColumn Header="MAC" Width="180">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding MAC, Converter={StaticResource m2s}}" FontSize="16"  local:TextBlockHelper.CopyOnClick="true" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                    <GridViewColumn Header="Ping">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock FontSize="16">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding Converter="{StaticResource p2t}">
                                                                            <Binding Path="Ping" />
                                                                            <Binding Path="Status" />
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                    <!--<GridViewColumn Header="Dienste / geöffnete Ports" Width="300">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <ItemsControl ItemsSource="{Binding OpenPorts}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal" />
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Border Background="LightGreen" Margin="4,0,4,0" Cursor="{Binding HasService,Converter={StaticResource b2c}}"  Tag="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}}">
                                                                                <TextBlock Text="{Binding Name}" FontSize="16" />
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>-->
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding View}" Value="{x:Static local:TouchView.Options}">
                            <Setter Property="ContentTemplate" TargetName="content">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid Margin="10" IsEnabled="{Binding IsAnalyzing, Converter={StaticResource ib}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel HorizontalAlignment="Center" Margin="0,50,0,0">
                                                <CheckBox FontSize="24" Content="Zeige Klasse-C-Netz Ansicht" IsChecked="{Binding Config.ShowClassCView}" Name="showccn" />
                                                <CheckBox FontSize="24" Content="Zeige Netzwerkinformationen" IsChecked="{Binding Config.ShowSystemInformation}" Name="showgeneral" />
                                                <CheckBox FontSize="24" Content="Starte Scan bei Programmstart" IsChecked="{Binding Config.AutoStart}" />
                                                <CheckBox FontSize="24" Content="Bei Interface-Wechsel Adressbereich übernehmen" IsChecked="{Binding Config.AutoFillRange}"  />
                                                <StackPanel Orientation="Horizontal" >
                                                    <CheckBox FontSize="24" Content="Port-Scan" VerticalAlignment="Center" IsChecked="{Binding Config.PortScan}" Visibility="Collapsed" />
                                                    <Button FontSize="24" Content="Einstellungen" Margin="5,0,0,0" IsEnabled="False" Visibility="Collapsed" />
                                                </StackPanel>

                                                <CheckBox FontSize="24" Content="Klasse-C-Netz Ansicht automatisch umblättern" IsChecked="{Binding Config.AutoScroll}"/>
                                                <CheckBox FontSize="24" Content="Internet-Erreichbarkeit prüfen" IsChecked="{Binding Config.CheckInternet}"  />
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock FontSize="24" Text="Max. parallele Verbindungen: " />
                                                    <xctk:IntegerUpDown FontSize="24" Minimum="1" Maximum="99" Value="{Binding Config.MaxParallelConnections}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="24" Text="Ping-Timeout (ms): " />
                                                    <xctk:IntegerUpDown FontSize="24" Minimum="1" Width="60"  Value="{Binding Config.PingTimeout}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" >
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock FontSize="24" Text="Benutzeroberfläche: " />
                                                        <ComboBox FontSize="24" SelectedItem="{Binding Config.GUIType}" Width="150"  local:EnumHelper.Enum="{x:Type local:GUIType}" />
                                                    </StackPanel>
                                                    <Button FontSize="24" Content="Hilfe" Margin="3" IsEnabled="False" Visibility="Collapsed"/>
                                                    <Button FontSize="24" Content="Check for Updates" Margin="3" IsEnabled="False" Visibility="Collapsed" />
                                                </StackPanel>                                              
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Visibility="Collapsed" Grid.Column="0" Margin="2" ToolTip="Bekannte Rechner aus Verlauf löschen" Command="{Binding ClearRecentHostsCommand}">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Icons/time_delete.png" />
                                                                <TextBlock Text="Verlauf leeren" />
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                    <Button Grid.Column="0" Margin="10,2,2,2" Visibility="Collapsed" ToolTip="Über IP46" Click="Button_Click">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Icons/information.png" />
                                                                <TextBlock FontSize="24" Text="Über..." />
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>

                                                <StackPanel Margin="0,50,0,0">
                                                    <TextBlock Text="IP46" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />
                                                    <Grid HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" MinWidth="100" />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="Version:" />
                                                        <TextBlock Text="1.0" Grid.Column="1" />
                                                        <TextBlock Text="Datum:" Grid.Row="1" />
                                                        <TextBlock Text="10.06.2015" Grid.Column="1" Grid.Row="1" />
                                                        <TextBlock Text="Entwickler:" Grid.Row="2" />
                                                        <TextBlock Text="Stefan Tobert" Grid.Column="1" Grid.Row="2" />
                                                        <TextBlock Text="Lizenz:" Grid.Row="3" />
                                                        <TextBlock Grid.Column="1" Grid.Row="3">
                    <Hyperlink TargetName="http://opensource.org/licenses/MIT" Click="Hyperlink_Click">MIT</Hyperlink>
                                                        </TextBlock>
                                                        <TextBlock Text="Projektseite:" Grid.Row="4" />
                                                        <TextBlock Grid.Column="1" Grid.Row="4">
                    <Hyperlink TargetName="http://ip46.codeplex.com" Click="Hyperlink_Click">http://ip46.codeplex.com</Hyperlink>
                                                        </TextBlock>
                                                    </Grid>
                                                    <TextBlock Text="Vielen Dank an:" Margin="5,40,0,10" />
                                                    <StackPanel Margin="5">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Yusuke Kamiyamane" FontWeight="Bold" />
                                                            <TextBlock Text=" (Icons), " />
                                                            <TextBlock>
                        <Hyperlink TargetName="http://p.yusukekamiyamane.com/" Click="Hyperlink_Click">http://p.yusukekamiyamane.com</Hyperlink>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Mark James" FontWeight="Bold" />
                                                            <TextBlock Text=" (Icons), " />
                                                            <TextBlock>
                        <Hyperlink TargetName="http://famfamfam.com" Click="Hyperlink_Click">http://famfamfam.com</Hyperlink>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ContentControl.ContentTemplate>
            <!--<ContentControl.ContentTemplateSelector>
                <local:TouchWindowContentSelector>
